define audio.new_direction = "audio/music/new-direction-by-kevin-macleod-from-filmmusic-io.mp3"
define audio.horsewagon = "audio/sounds/horsewagon.mp3"

define narrator = Character(None, kind=nvl_narrator, what_color="#ffffff")

# Вместо использования оператора image можете просто
# складывать все ваши файлы изображений в папку images.
